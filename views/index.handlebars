
<div class="container">

  <div class="row">

    <div class="jumbotron">
      <h2 class="text-center text-danger">Eat-Da-Burgers!!</h2>
    </div>
  </div>




  <div class="row">

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Burgers that are not devoured!</h3>
      </div>
        <ul class="list-group">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
        </ul>
    </div>

  </div>


  <div class="row">

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Burgers that are devoured!</h3>
      </div>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </div>

  </div>




  <div class="row">

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Add a Burger</h3>
      </div>

      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Not Devoured!
        </div>

        <button type="submit">Add Burger</button>
      
      </form>

    </div>

  </div>




</div>

